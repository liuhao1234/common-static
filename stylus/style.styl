// 弹窗样式
.pUpWin-body{
    padding: 10px
    margin: 0 10px
    height: 100%
    box-sizing: border-box
    &>.left{
        float: left
        box-sizing: border-box
        width: 50%
        height: 100%
        padding-right: 5px
    }
    &>.right{
        float:right
        box-sizing: border-box
        width: 50%
        height: 100%
        padding-left: 5px
        .staff-list{
            margin-top: 10px
            box-sizing: border-box
            height: calc(100% - 70px)
            border: 1px solid #e6e6e6
        }
    }

}

